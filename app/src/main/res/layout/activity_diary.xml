<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@drawable/default_background" >

    <!-- 1. 상단 제목 -->
    <TextView
        android:id="@+id/tv_diary_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="오늘의 기록"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#B3E5FC"
        android:layout_marginBottom="20dp"/>

    <!-- 2. 날짜 표시 -->
    <TextView
        android:id="@+id/tv_diary_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024.11.24"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/et_diary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목을 입력하세요"
        android:inputType="text"
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="10dp"/>

    <!-- 3. 메뉴 이름 (룰렛에서 받아옴) -->
    <TextView
        android:id="@+id/tv_diary_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비빔밥"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#0000FF"
        android:layout_marginBottom="20dp"/>

    <!-- 4. 이미지 공간 (임시 배경색) -->
    <ImageView
        android:id="@+id/iv_food_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:background="#E0E0E0"
        android:scaleType="center"
        android:layout_marginBottom="20dp"/>

    <!-- 5. 일기 내용 입력창 -->
    <EditText
        android:id="@+id/et_diary_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="오늘 먹은 음식에 대한 기록을 남겨보세요."
        android:gravity="top|start"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <!-- 6. 버튼 영역 (저장 / 뒤로가기) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_save_diary"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="저장"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/btn_back_diary"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="뒤로가기"
            android:textSize="18sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

</LinearLayout>